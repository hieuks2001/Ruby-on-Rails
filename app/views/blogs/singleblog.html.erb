        <input type="hidden" value="<?php echo $user['avatar'] ?>" id="avatar" data-type="1">
        <% if session[:user_id] %>          
            <input type="submit" class="btn-success " value="Gửi bình luận" style="margin-bottom:30px;">
         <% else %>
            <input  class="btn-success " value="Đăng nhập để bình luận"  style="margin-bottom:30px;">
         <% end %>   
   
    </div>


        </div>
