<section class="blog_area single-post-area section-padding" style="background-color:#8fffc60d;">
    <div class="container">
        <div class="row">   

    <div class="col-lg-8 posts-list">
        <div class="single-post">
            <div class="blog_details">
                    <% @s_blogs.each do |blog| %>   

                <h1><%= blog.title%></h1>
                <ul class="blog-info-link mt-3 mb-4">
                    <li><a href="#"><i class="fa fa-user"></i> Du lịch, văn hóa</a></li>
                    <li><%= blog.time%></li>
                </ul>
                <div class="quote-wrapper">
                    <div class="quotes">
