<div class="container-fluid pt-3">
    <h1>Đổi thông tin cá nhân</h1>
    <hr>
    <div class="row" style="margin-left:90px;">
        <!-- left column -->
        <div class="col-lg-3">
            <div class="text-center">
                <img src="img/avatar/<%= @users.avatar%>" style="border:2px solid #000;" width="100px" class="rounded-circle" alt="avatar">
                <h6>Đổi ảnh đại diện khác...</h6>
                <input type="file" class="form-control">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-lg-9">
            <div class="alert  alert-dismissable">
                <!-- <a class="panel-close close" data-dismiss="alert">×</a> 
                    <i class="fa fa-coffee"></i> -->
            </div>
            <form class="form-horizontal" autocomplete="off" method="post">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Tên người dùng:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" name="username" value="<%= @users.fullname%>">
                    </div>
                </div>               
                <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                        <input class="form-control" type="text" name="email" value="<%= @users.email%>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Quyền:</label>
                    <div class="col-lg-8">
                        <select name="txtrole" class="form-control">
                            <% if @users.role =="1" %>                                 

                                <option value="0">Khách hàng</option>
                                <option value="2">Blogger</option>
                                <option value="1" selected>Đối tác quảng cáo</option>

                            <% elsif @users.role =="0" %>      
                                <option value="0" selected>Khách hàng</option>
                                <option value="2">Blogger</option>
                                <option value="1">Đối tác quảng cáo</option>
                            <%  else %>      
                                <option value="0">Khách hàng</option>
                                <option value="2" selected>Blogger</option>
                                <option value="1">Đối tác quảng cáo</option>
                            <% end %>      
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-12 control-label">Mật khẩu cũ:</label>
                    <div class="col-lg-8">
                        <input class="form-control" name="old_password" type="password" id="myInput1">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Mật khẩu mới:</label>
                    <div class="col-lg-8">
                        <input class="form-control" name="new_password" type="password" id="myInput2">

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Xác nhận mật khẩu:</label>
                    <div class="col-lg-8">
                        <input class="form-control" name="new_password2" type="password" id="myInput">
                    </div>
                </div>
                <div class="col-lg-12 control-label">
                    <button type="submit" name="edit" class="btn btn-success" style="font-size:20px;">Lưu thay đổi</button>
                </div>
            </form>
        </div>





    </div>
</div>
</div>