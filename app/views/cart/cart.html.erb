<div class="container">
    <% @product.each do |product| %>   

    <strong class="container" style='color:red; font-size:60px;'><%= product.tenmathang%></strong>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-4">
            <div class="col-5 text-center">
                <strong style="font-weight:700;">Ảnh sản phẩm : </strong> <br><img src="/img/place/<%= product.anh%>" style="width:300px;height:300px;">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-8">
            <div class="alert  alert-dismissable">
               <%= flash[:success] %>
            </div>
            <form class="form-horizontal" autocomplete="off" method="get">
                <div class="form-group">
                    <label class="col-lg-3 control-label">Tên nhà cung cấp dịch vụ:</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="text" name="name" value="<%= product.tenmathang%>">
                    </div>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="iduser" hidden value="<%= @users.id%>">

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" hidden name="danhmuc" value="<%= product.tendanhmuc%>">
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Thuộc loại dịch vụ:</label>
                    <div class="col-lg-12">
                        <select name="type" class="form-control">
                            <option value="datban">Đặt bàn</option>
                            <option value="datphong">Đặt phòng</option>
                            <option value="ship">Giao hàng</option>
                        </select><br>
                    </div>
                </div><br>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Số người:</label>
                    <div class="col-lg-12">
                        <input class="form-control" type="number" name="amount" value="<%= params[:amount] %>">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-12 control-label">Thời gian nhận phòng (bàn):</label>
                    <div class="col-lg-12">
                        <input class="form-control" name="time" type="datetime-local" value="<%= params[:time] %>">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Chú thích:</label>
                    <div class="col-lg-12">
                        <input class="form-control" name="note" type="text" value="<%= params[:note] %>">

                    </div>
                </div>
            
                <div class="col-lg-12 control-label">
                    <button type="submit" class="btn btn-success" style="font-size:20px;">Đặt Ngay</button>
                </div>
            </form>
        </div>
    </div>
   <% end %>

</div>